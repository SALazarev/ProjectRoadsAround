<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/second_nav_graph"
    app:startDestination="@id/routesFragment">

    <fragment
        android:id="@+id/routesFragment"
        android:name="ru.salazarev.roadsaround.presentation.routes.RoutesFragment"
        android:label="fragment_routes"
        tools:layout="@layout/fragment_routes" >
        <action
            android:id="@+id/action_routesFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="ru.salazarev.roadsaround.presentation.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/searchEventFragment"
        android:name="ru.salazarev.roadsaround.presentation.searchevent.SearchEventFragment"
        android:label="fragment_search_event"
        tools:layout="@layout/fragment_search_event" />
    <action
        android:id="@+id/action_global_routesFragment"
        app:destination="@id/routesFragment" />
    <action
        android:id="@+id/action_global_profileFragment"
        app:destination="@id/profileFragment" />
    <action
        android:id="@+id/action_global_searchEventFragment"
        app:destination="@id/searchEventFragment" />
    <fragment
        android:id="@+id/chatFragment"
        android:name="ru.salazarev.roadsaround.presentation.chat.ChatFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_chat" />
</navigation>